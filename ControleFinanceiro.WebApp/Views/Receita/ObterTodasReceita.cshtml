@model IEnumerable<ControleFinanceiro.Servicos.EntidadeServico.ReceitaVO>
@{
    ViewData["Title"] = "Home Page";
}

<div class="card">
    <div class="card-header">
        <h3 class="card-title">
            Receita
        </h3>
        <div class="card-adicionar">
            <a data-target="#createModal" data-toggle="tooltip" data-placement="top" data-original-title="Nova Receita" data-url="@Url.Action("AdicionarReceita", "Receita")" class="icone-adicionar botaoMostrarModal">
                <i class="bi bi-plus-square-fill"></i>
                Adicionar
            </a>
        </div>
    </div>

    <div class="card-body">
        <div class="tabela">
            <table class="table">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">
                            @Html.DisplayName("Descrição")
                        </th>
                        <th scope="col">
                            @Html.DisplayName("Data da receita")
                        </th>
                        <th scope="col">
                            @Html.DisplayName("Valor")
                        </th>
                        <th scope="col">
                            @Html.DisplayName("Ações")
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var receita in Model)
                    {
                        <tr>
                            <td scope="row">@receita.Descricao</td>
                            <td>@receita.CreatedAt</td>
                            <td>@receita.Valor</td>
                            <td>
                                <a href="@Url.Action("ObterReceitaPorId","Receita", new {id = receita.Id})" class="icones-tabela">
                                    <i class="bi bi-eye"></i>
                                </a>
                                <a href="@Url.Action("AdicionarReceita, Receita", new{id = receita.Id})" class="icones-tabela">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <a href="@Url.Action("StatusDeletado", "Receita", new{id = receita.Id})" class="icones-tabela">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
@await Html.PartialAsync("AdicionarReceita", new ControleFinanceiro.Servicos.EntidadeServico.ReceitaVO())
<script src="~/js/ModalTabela.js"></script>