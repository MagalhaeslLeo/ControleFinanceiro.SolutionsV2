@model ControleFinanceiro.Servicos.EntidadeServico.ReceitaVO
@{
    ViewData["Title"] = "Deletar Receita";
}
<div class="modal fade" id="deletarModal_@Model.Id" tabindex="-1" role="dialog" aria-labelledby="createModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="container">
                <div class="row">
                    <form class="needs-validation" asp-action="StatusDeletado">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="modal-header">
                            <div class="col-md-6" hidden>
                                <input asp-for="Id" class="form-control" />
                            </div>
                            <h5 class="title-lable-dizimista"> Deseja exluir receita @Model.Descricao </h5>
                            <a asp-action="ObterTodasReceita" type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fechar">
                            </a>
                            <hr />
                        </div>
                        <div class="modal-footer">
                            <hr />
                            <div>
                                <div class="form-group form-inline">
                                    <div>
                                        <input type="submit" value="Excluir" class="btn btn-danger">
                                        <a class=" btn btn-info" data-bs-dismiss="modal">Voltar</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
