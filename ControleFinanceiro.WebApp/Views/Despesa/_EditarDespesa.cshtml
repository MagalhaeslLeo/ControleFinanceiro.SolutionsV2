@model ControleFinanceiro.Servicos.EntidadeServico.DespesaVO
@{
    ViewData["Title"] = "_EditarDespesa";
}
<div class="modal fade" id="editarModal_@Model.Id" tabindex="-1" role="dialog" aria-labelledby="createModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="container">
                <div class="row">
                    <form id="frmEditar" class="needs-validation editar-despesa" asp-action="AdicionarDespesa">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="modal-header">
                            <h5 class="title-lable-dizimista"> Editar Despesa </h5>
                            <a asp-action="ObterTodasDespesa" type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fechar">
                            </a>
                            <hr />
                        </div>
                        <div class="modal-body">
                            <div class="row">

                                <div class="col-md-6" hidden>
                                    <input asp-for="Id" class="form-control" />
                                </div>

                                <div class="col-md-6">
                                    <label> </label>
                                    <input asp-for="Descricao" class="form-control" placeholder="Descrição" id="descricaoEditar" />
                                    <div class="invalid-feedback" id="descricaoErroEditar"></div>
                                </div>
                                <div class="col-md-6">
                                    <label> </label>
                                    <input asp-for="CreatedAt" class="form-control obterDespesaReceita" id="periodoEditar" />
                                    <div class="invalid-feedback" id="periodoErroEditar"></div>
                                </div>
                                <div class="col-md-6">
                                    <label> </label>
                                    <input asp-for="Valor" class="form-control" placeholder="Valor" id="valorEditar" />
                                    <div class="invalid-feedback" id="valorErroEditar"></div>
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <hr />
                            <div>

                                <div class="form-group form-inline">
                                    <div>
                                        <input id="submitButtonEditar" type="submit" value="Salvar" class="btn btn-primary" disabled>
                                        <a class=" btn btn-info" data-bs-dismiss="modal">Voltar</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/js/adicionardespesa/editardespesa.js"></script>