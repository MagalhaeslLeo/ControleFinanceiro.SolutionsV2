@model ControleFinanceiro.Servicos.EntidadeServico.DespesaVO
@{
    ViewData["Title"] = "ObterDespesaPorId";
}
<div class="modal fade" id="consultarModal_@Model.Id" tabindex="-1" role="dialog" aria-labelledby="consultarModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="container">
                <div class="row">
                    <form class="needs-validation" asp-action="ObterDespesaPorId">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="modal-header">
                            <h5 class="title-lable-dizimista"> Consultar Despesa </h5>
                            <a asp-action="ObterTodasDespesa" type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fechar">
                            </a>
                        </div>
                        <div class="modal-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <label asp-for="Descricao" class="control-label title-lable-dizimista">Descrição</label>
                                    <input asp-for="Descricao" class="form-control" readonly />
                                </div>
                                <div class="col-md-6">
                                    <label asp-for="CreatedAt" class="control-label title-lable-dizimista">Período</label>
                                    <input asp-for="CreatedAt" class="form-control" readonly />
                                    <span asp-validation-for="CreatedAt" class="text-danger"></span>
                                </div>
                                <div class="col-md-6">
                                    <label asp-for="Valor" class="control-label title-lable-dizimista">Valor</label>
                                    <input asp-for="Valor" class="form-control" readonly />
                                    <span asp-validation-for="Valor" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <hr />
                            <div>

                                <div class="form-group form-inline">
                                    <div>
                                        <a class=" btn btn-info" data-bs-dismiss="modal">Voltar</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>