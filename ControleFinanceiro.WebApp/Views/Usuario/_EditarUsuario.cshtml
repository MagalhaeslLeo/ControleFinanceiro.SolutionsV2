@model ControleFinanceiro.Servicos.EntidadeServico.UsuarioVO
@{
    ViewData["Title"] = "_EditarUsuario";
}
<div class="modal fade" id="editarModal_@Model.Id" tabindex="-1" role="dialog" aria-labelledby="createModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="container">
                <div class="row">
                    <form id="frmEditar" class="needs-validation editar-usuario" asp-action="AdicionarUsuario">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="modal-header">
                            <h5 class="title-lable-dizimista"> Editar Usuario </h5>
                            <a asp-action="ObterTodosUsuarios" type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fechar">
                            </a>
                            <hr />
                        </div>
                        <div class="modal-body">
                            <div class="row">

                                <div class="col-md-6" hidden>
                                    <input asp-for="Id" class="form-control" />
                                </div>

                                <div class="col-md-6">
                                    <label> </label>
                                    <input asp-for="NomeUsuario" class="form-control" placeholder="NomeUsuario" id="nomeEditar" />
                                    <div class="invalid-feedback" id="nomeErroEditar"></div>
                                </div>
                                <div class="col-md-6">
                                    <label> </label>
                                    <input asp-for="EmailUsuario" class="form-control obterDespesaReceita" id="emailEditar" />
                                    <div class="invalid-feedback" id="emailErroEditar"></div>
                                </div>
                                <div class="col-md-6">
                                    <label> </label>
                                    <input asp-for="SenhaUsuario" class="form-control" placeholder="Senha" id="senhaEditar" />
                                    <div class="invalid-feedback" id="senhaErroEditar"></div>
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <hr />
                            <div>

                                <div class="form-group form-inline">
                                    <div>
                                        <input id="submitButtonEditar" type="submit" value="Salvar" class="btn btn-primary" disabled>
                                        <a class=" btn btn-info" data-bs-dismiss="modal">Voltar</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>